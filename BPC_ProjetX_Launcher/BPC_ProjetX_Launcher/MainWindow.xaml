        <StatusBar Height="30" Margin="0,340,0,0" VerticalAlignment="Top" Background="#FF343434" BorderBrush="White">
            <Label x:Name="MainWindow_Status_ServeurStatus" Foreground="Red" Content="Serveur Status"/>
